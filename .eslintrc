{
  "extends": [
    "standard",
    "standard-jsx"
  ],
  "plugins": [
    "standard",
    "promise",
    "react",
    "react-hooks",
    "mocha"
  ],
  "env": {
    "mocha": true,
    "jasmine": true
  },
  "rules": {
    "standard/no-callback-literal": 0,
    "mocha/no-exclusive-tests": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "globals": {
    "$": true,
    "after": true,
    "afterEach": true,
    "analytics": true,
    "before": true,
    "beforeEach": true,
    "context": true,
    "describe": true,
    "expect": true,
    "fetch": true,
    "HTMLElement": true,
    "Image": true,
    "it": true,
    "jQuery": true,
    "localStorage": true,
    "location": true,
    "performance": true,
    "sandbox": true,
    "sinon": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
